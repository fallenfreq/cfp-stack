{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "cssVariables.js",
    "tailwind.config.js",
    "vuestic.my.config.ts",
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "components.d.ts",
    "../api/src/schemas/**/*"
  ],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "allowJs": true,
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
